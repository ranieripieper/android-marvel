<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/margin_recycler_item"
    android:layout_marginEnd="@dimen/margin_recycler_item"
    app:cardUseCompatPadding="true"
    app:elevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner"
    android:layout_height="wrap_content">

    <TextView
        android:padding="@dimen/margin_comic_serie_item"
        android:id="@+id/tvComicSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.CharacterComicSerie"
        tools:text="Comic or Serie" />

</androidx.cardview.widget.CardView>