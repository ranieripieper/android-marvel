<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/defaultBackground</item>
        <item name="android:textColor">@color/defaultText</item>
    </style>

    <style name="AppTheme.CharacterName" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/character_name_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CharacterDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/character_description_text_size</item>
    </style>

    <style name="AppTheme.CharactersSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/character_subtitle_text_size</item>
    </style>

    <style name="AppTheme.CharacterComicSerie" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/character_comic_serie_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
